<view class="header">
  <view class="inner-container" bindtap="toLogin">
    <view class="left-section">
      <image class="avatar" src="{{avatarUrl}}" />
      <view class="userinfo">
        <text class="login-text" >{{!nickName ? '登录/注册' : nickName}}</text>
        <!--<text class="login-id" wx:if="{{nickName}}">ID:{1233333}</text>-->
      </view>
    </view>
    <view class="right-section">
    <image mode="widthFix" class="icon" style="width:7px" src="../images/icon/777.png"></image>
    </view>
  </view>
</view>

<view class="list-item" bindtap="setMyInfo">
  <view class="main-text">
    <image mode="widthFix" class="icon" style="width:18px" src="../images/icon/img7.png"></image>
    <text>个人资料管理</text>
  </view>
  <view class="right-section-next">
    <image mode="widthFix" class="icon" style="width:6px" src="../images/icon/777.png"></image>
  </view>
</view>
<view class="list-item" bindtap="bingCode">
  <view class="main-text">
    <image mode="widthFix" class="icon" style="width:18px" src="../images/icon/11.png"></image>
    <text>安全信息平台账号绑定</text>
  </view>
  <view class="right-section-next">
    <image mode="widthFix" class="icon" style="width:6px" src="../images/icon/777.png"></image>
  </view>
</view>
<view class="list-item" bindtap="goAddr">
  <view class="main-text">
    <image mode="widthFix" class="icon" style="width:18px" src="../images/icon/99.png"></image>
    <text>个人地址ID管理</text>
  </view>
  <view class="right-section-next">
    <image mode="widthFix" class="icon" style="width:6px" src="../images/icon/777.png"></image>
  </view>
</view>
