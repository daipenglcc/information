/* pages/memberCenter/memberCenter.wxss */
.user_box {
  position: relative;
  width: 100%;
  margin-top: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user_bg {
  width: 690rpx;
  height: 230rpx;
  margin-top: 70rpx;
  background-color: white;
  border-radius: 20rpx;
}

.user_img {
  border: 2rpx solid rgba(255, 255, 255, 0.7);
  height: 96rpx;
  background: white;
  margin: 30rpx;
  width: 96rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user_info {
  position: absolute;
  top: 165rpx;
  height: 135rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user_name_box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.user_name {
  font-size: 32rpx;
  margin-top: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #000000;
}

.user_tag {
  min-width: 180rpx;
  overflow: hidden;
  border-radius: 16rpx;
  height: 40rpx;
  font-size: 24rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  margin-top: 20rpx;
  line-height: 40rpx;
  color: #499CFF;
  background-color: #F4F9FF;
  text-align: center;
}

.user_code {
  background: #EBF1FC;
  border-radius: 22rpx;
  padding: 2rpx 10rpx;
  margin-top: 30rpx;
  font-size: 22rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #3185F6;
}

.menu {
  display: flex;
  height: 100rpx;
  flex-direction: row;
  align-items: center;
}

.m1 {
  width: 30rpx;
  margin-left: 60rpx;
  height: 30rpx;
}

.m2 {
  margin-left: 50rpx;
  font-size: 34rpx;
  color: black;
}

.menu_box {
  width: 690rpx;
  display: flex;
  height: 100rpx;
  flex-direction: row;
  align-items: center;
  margin: 10rpx auto;
  background-color: white;
  border-radius: 20rpx;
  position: relative;
}


.m3 {
  width: 30rpx;
  height: 30rpx;
}

.m4 {
  margin: 15rpx;
  font-size: 26rpx;
  color: black;
}

/*  */
.new_user_box {
  width: 100vw;
  height: 430rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}

.new_bg {
  width: 100vw;
  background: linear-gradient(94deg, #2A8CFF 0%, #4C9EFF 100%);
  border-radius: 0px 0px 36rpx 36rpx;
  height: 300rpx;
}

.new_user_view {
  width: 690rpx;
  position: absolute;
  top: 150rpx;
  height: 270rpx;
  left: 30rpx;
  background: #FFFFFF;
  border-radius: 24rpx 8rpx 8rpx 8rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.b1 {
  display: flex;
  flex-direction: row;
}

.b2 {
  display: flex;
  margin-left: 10rpx;
  flex-direction: column;
}

.b3 {
  display: flex;
  width: calc(100% - 60rpx);
  margin: 20rpx auto;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}

.b4 {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}



.b5 {
  width: 690rpx;
  background: #FFFFFF;
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  display: flex;
  justify-content: center;
  margin: 20rpx auto;
  flex-direction: column;
}

.b6 {
  width: calc(100% - 40rpx);
  margin: 0 auto;
  height: 100rpx;
  display: flex;
  border-bottom: 1rpx solid #ededed;
  flex-direction: row;
  align-items: center;
}

.i1 {
  width: 37rpx;
  height: 32rpx;
}

.i2 {
  flex: 1;
  font-size: 30rpx;
  margin-left: 15rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #464646;
}
.i3{
  height: 32rpx;
  width: 32rpx;
}

/*  */


@keyframes myfirst {
  from {
    transform: translateY(500rpx);
  }

  to {
    transform: translateY(0);
  }
}

@keyframes mylast {
  from {
    transform: translateY(0rpx);
  }

  to {
    transform: translateY(500rpx);
  }
}

.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  bottom: 0;
  z-index: 998;
}

.hide {
  animation: mylast;
  animation-duration: 0.4s;
  animation-iteration-count: 1;
  animation-fill-mode: forwards;
  display: flex;  
  flex-direction: column;
  width: 100%;
  height: 500rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  background: white;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
}

.show {
  animation: myfirst;
  animation-duration: 0.5s;
  animation-iteration-count: 1;
  animation-fill-mode: forwards;
  display: flex;  
  flex-direction: column;
  width: 100%;
  height: 500rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  background: white;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
}

.checkLogin {
  display: none;
}

.logo{
  margin: 40rpx auto 30rpx auto;
  width: 140rpx;
  height: 140rpx;
}

.name{
  margin: 0rpx auto;
  font-size: 34rpx;
  color: #333333;
}
.mark{
  margin-left: auto;
  margin-right: auto;
  margin-top: 70rpx;
  margin-bottom: 30rpx;
  font-size: 30rpx;
  color: #464646;
}