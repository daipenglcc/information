/* pages/employeeManagement/employeeManagement.wxss */
.mList{
  width: 100%;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item{
  width: calc(100% - 60rpx);
  border-radius: 30rpx;
  margin-top: 30rpx;
  background: white;
  display: flex;
  flex-direction: column;
}

.name-box{
  margin-top: 30rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.name{
  font-size: 34rpx;
  color: #333333;
}
.type{
  font-size: 28rpx;
  margin-left: 15rpx;
  color: #666;
}
.code{
  margin-top: 20rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #3DBDAB;
}
.status{
  font-size: 28rpx;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
  width: calc(100% - 30rpx);
  padding-top: 20rpx;
  border-top: 2rpx dotted #ededed;
}